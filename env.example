# Configuration de l'application
# Copiez ce fichier en .env et remplissez avec vos valeurs
# Le fichier .env est ignoré par Git pour protéger vos informations sensibles

# Authentification
SECRET_KEY=votre_secret_key_ici_changez_moi
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Base de données PostgreSQL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Serveur
API_V1_PREFIX=/api/v1
DEBUG=True

# Email (optionnel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=password

# Tokens
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=48

# Logs
LOGS_LEVEL=INFO

